generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id           Int       @id @default(autoincrement())
  nome         String    @db.VarChar(100)
  email        String    @unique @db.VarChar(150)
  senha_hash   String
  data_criacao DateTime? @default(now()) @db.Timestamp(6)
  pedidos      Pedido[]
}

model produtos {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(50)
  descricao  String?
  preco      Decimal  @db.Decimal(10, 2)
  imagem_url String?
  createdAt  DateTime @default(now())
  imagem_2   String?
  imagem_3   String?
  imagem_4   String?
  imagem_5   String?
  updatedAt  DateTime @default(now())
}

model Pedido {
  id                   Int      @id @default(autoincrement())
  usuario_id           Int
  data_pedido          DateTime @default(now()) @db.Timestamp(6)
  status               String   @default("pendente") @db.VarChar(255)
  subtotal             Float
  valor_frete          Float
  total                Float
  metodo_pagamento     String?  @db.VarChar(255)
  endereco_cep         String   @db.VarChar(255)
  endereco_logradouro  String   @db.VarChar(255)
  endereco_bairro      String   @db.VarChar(255)
  endereco_cidade      String   @db.VarChar(255)
  endereco_uf          String   @db.VarChar(255)
  frete_transportadora String   @db.VarChar(255)
  frete_prazo          String   @db.VarChar(255)
  usuario              usuarios @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_usuario")

  @@map("pedidos")
}
